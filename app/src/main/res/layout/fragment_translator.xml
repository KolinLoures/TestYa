<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context="com.example.kolin.testya.veiw.fragment.TranslatorFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/main_toolbar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:weightSum="1">

            <Button
                android:id="@+id/translator_btn_from"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="?attr/selectableItemBackground"
                android:text="Английский"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/colorBlack" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/translator_img_btn_reverse"
                android:layout_weight="0.2"
                android:background="?attr/selectableItemBackground"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/ic_swap_horiz_black_24px"
                android:text="Английский" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:id="@+id/translator_btn_to"
                android:background="?attr/selectableItemBackground"
                android:text="Английский"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/colorBlack" />

        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/selector_border"
        android:minHeight="150dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/translator_edit_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            android:hint="@string/write_text"
            android:scrollbars="vertical" />

        <ImageButton
            android:id="@+id/translation_clear_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_clear_black_24dp" />


    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/translation_card"
                layout="@layout/translation_card" />

            <include
                android:id="@+id/dictionary_card"
                layout="@layout/dictionary_card" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
